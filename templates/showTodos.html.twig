<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Todos</title>
    </head>
    <body>
        <h1>Todo</h1>
        <p><a href="{{ path('showTodos') }}?all=1">Show completed</a></p>
        <ul>
            {% for todo in todos %}
                {% if todo.completed %}
                    <li><s>{{ todo.text }}</s> | <a href="{{ path('completeTodo') }}?id={{ todo.id }}">Reset</a></li>
                {% else %}
                    <li>{{ todo.text }} | <a href="{{ path('completeTodo') }}?id={{ todo.id }}&cmp=1">Complete</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </body>
</html>
